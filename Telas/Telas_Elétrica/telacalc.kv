
<Cmotores>:
    title:'EletricTolls_Motores'
    id:'Cmotores'
    orientation: 'vertical'
    canvas:

        Color:
            rgba: 0.3, 0.5, 0.3, 1

        Rectangle:
            size: self.size
            pos: self.pos
            source: 'Marron.jpg'

    Label:
         
        markup: True
        text: '[color=00ff00][b][i]RSTools[/i][/b][/color]'
        font_size: 20
        size_hint_y: None
        height: 100

    Label:
        text:'CÀLCULOS GERAIS DE MOTORES CA'
    Label:
        text:'Escola o Tipo de motor'

    RelativeLayout:
        canvas:
            Color:
                rgba: 0.2, 0.5, 0.3, 1
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'Marron.jpg'
            
        
        Label:
            pos_hint: {'x': 0.1, 'y': 0.5}
            size_hint: [0.2, 0.08]
            font_size: '14sp'
            markup: True
            text: "[color=ffff80][i][b]Trifásico[/b][/i][/color]"
            #font_size: 40
        CheckBox:
            id: tri
            group: 'sort'
            pos_hint: {'x': 0.3, 'y': 0.5}
            size_hint: [0.2, 0.08]

                
    
        Label:
            pos_hint: {'x': 0.6, 'y': 0.5}
            size_hint: [0.2, 0.08]
            font_size: '14sp'
            markup: True
            text: "[color=ffff80][i][b]Monofásico[/b][/i][/color]"
            #font_size: 40
        CheckBox:
            id: mono
            group: 'sort'
            color: 'FCFCFC'
            pos_hint: {'x': 0.6, 'y': 0.5}
            size_hint: [0.5, 0.08]

    BoxLayout:
        size_hint_y: None
        height: 50
        padding: 5
        spacing: 5
        Label: 
            text:'Potência do Motor'

        TextInput:
            id: tinput
            size_hint_x: None
            width: 70
            

        Spinner:
            id: pot
            values: 'Cv', 'Kw', 'Watts'
            text: ''
            size_hint_x: None
            width: 70
            on_text:
                root.escolhaPotencia()
            

