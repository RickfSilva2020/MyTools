# Tela de gerenciamento
<Gerenciador_de_Telas>:

    TelaPrincipal:
        name: 'TelaPrincipal'

    Sorteio:
        name: 'Sorteio'

    Cmotores:
        name: 'Cmotores'
   


<TelaPrincipal>:
           
    BoxLayout:

        orientation:'vertical'
        
        # Centraçização e espaços entre os widgets
        padding: 50
        spacing: 50

        # Configurações de cores e imagens

        canvas:
            Color:
                rgba: 0.5, 1, 1, 0.5
            
            Rectangle: 
                size: self.size
                pos: self.pos
                source: 'CinzaVetor.png'
        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: 0.5, 1, 1, 0.3
                
                Rectangle: 
                    size: self.size
                    pos: self.pos
                    
                    source: 'LOGONRS.png'
        Label:
            text:'RS Tools'
            color: 0, 0, 1, 1
            font_size: 60
            size_hint_y: None
            height: 60   
                     
        Label:
            text:''
            size_hint_y: None
            height: 45
            
               
        Button:
            text: 'EletricTools'
            font_size: 35
            size_hint_y: None
            height: 100
            on_release: app.root.current = 'Cmotores'


            
        Button:
            text: 'MecanicTools'
            size_hint_y: None
            height: 100

        Button:
            text: 'SeveralTolls'
            size_hint_y: None
            height: 100
            on_release: app.root.current= 'Sorteio'
            
        Label:
            test:''

        Button:
            markup: True
            text: '[b]Sair[/b]'
            size_hint_y: None
            height: 60
            on_release: root.confirmacao_de_saida()

<Sorteio>:
    BoxLayout:

        GridLayout:
            cols: 1

            # Inserindo Action Bar
            ActionBar:
                canvas:
                    Color:
                        rgba: 0.3, 0.7, 0.4, 0.5
                    Rectangle: 
                        size: self.size
                        pos: self.pos
                ActionView:
                    ActionPrevious:
                        title:'Janela 1'
                        on_release: app.root.current = 'TelaPrincipal'
                   
                    ActionButton:

                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle: 
                                size: self.size
                                pos: self.pos
                        
                        text:'Sair'
                        on_release: app.stop()

                        
            BoxLayout:
                
                orientation: 'vertical'
                padding: 35
                spacing: 20
                canvas:
                    Color:
                        rgba: 0.5, 0.7, 1, 0.5
                    Rectangle: 
                        size: self.size
                        pos: self.pos
                        source: 'Lilas.jpg'
                Label:
                    
                    markup: True
                    text: '[color=00ff00][b][i]RSTools[/i][/b][/color]'
                    font_size: 60
                    size_hint_y: None
                    height: 100
                    
                Label:
                    markup:True
                    text: "[color=ffff80][i][b]DIGITE OS ELEMENTOS DO SORTEIO[/b][/i][/color]"
                    font_size: 40
                    size_hint_y: None
                    height: 100
                BoxLayout:
                    size_hint_y: None
                    height: 370
                    TextInput:
                        text: "Digite aqui "
                        id: element
                BoxLayout:
                    size_hint_y: None
                    height:100
                    Label:
                        markup: True
                        text: "[color=ffff80][i][b]ESCOLHA O TIPO DE SORTEIO[/b][/i][/color]"
                BoxLayout:
                    
                
                    GridLayout:
                        cols: 2
                        Label:
                            markup: True
                            text: "[color=ffff80][i][b]Sequência[/b][/i][/color]"
                            font_size: 40
                        CheckBox:
                            id: sequencia
                            group: 'sort'
                            pos_hint: {'x': 0, 'y': 0.5}
                            size_hint: [0.2, 0.08]
                            
                            

                    GridLayout:
                        cols: 2
                        Label:
                            markup: True
                            text: "[color=ffff80][i][b]Sorteio Único[/b][/i][/color]"
                            font_size: 40
                        CheckBox:
                            id: unico
                            group: 'sort'
                            color: 'FCFCFC'
                            pos_hint: {'x': 0.3, 'y': 0.5}
                            size_hint: [0.5, 0.08]
                            
                BoxLayout:
                    Label:
                        id: output_label
                        text: ''
                BoxLayout:
                    size_hint_y: None
                    height: 100

                    spacing:20
                    
                    Button:
                        text:'SORTEAR'
                        on_release: root.sorteio(self)

                    
                    Button:
                        text:'CANCELAR'
                        on_release: app.root.current= 'TelaPrincipal'

<Cmotores>:
    BoxLayout:
        GridLayout:
            cols: 1

            # Inserindo Action Bar
            ActionBar:
                canvas:
                    Color:
                        rgba: 0.3, 0.7, 0.4, 0.5
                    Rectangle: 
                        size: self.size
                        pos: self.pos
                ActionView:
                    ActionPrevious:
                        title:'Cálculo de Motores'
                        on_release: app.root.current = 'TelaPrincipal'
                   
                    ActionButton:

                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle: 
                                size: self.size
                                pos: self.pos
                        
                        text:'Sair'
                        on_release: app.stop()

            BoxLayout:
                title:'EletricTolls_Motores'
                id:'Cmotores'
                orientation: 'vertical'
                canvas:
          
                    Color:
                        rgba: 0.3, 0.5, 0.3, 1
          
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        source: 'Marron.jpg'
          
                Label:
                          
                    markup: True
                    text: '[color=00ff00][b][i]RSTools[/i][/b][/color]'
                    font_size: 60
                    size_hint_y: None
                    height: 130
          
                Label:
                    markup: True
                    text:'[color=#ffff33][b]CÁLCULOS GERAIS DE MOTORES CA[/b][/color]'
                    font_size: 40
                    size_hint_y: None
                    height: 100
                Label:
                    markup: True
                    text:'[color=#ffff33]Escola o Tipo de motor[/color]'
                    font_size : 40
                    size_hint_y: None
                    height: 120
                BoxLayout:
                       
                    size_hint_y: None
                    height: 100
          
                    RelativeLayout:
                         
                        canvas:
                            Color:
                                rgba: 0.2, 0.5, 0.3, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos
                                source: 'Marron.jpg'
                      
                          
                      
                        Label:
                            pos_hint: {'x': 0.1, 'y': 0.5}
                            size_hint: [0.2, 0.08]
                            font_size: '14sp'
                            markup: True
                            text: "[color=ffff80][i][b]Trifásico[/b][/i][/color]"
                              
                          
                        CheckBox:
                            id: tri
                            group: 'sort'
                            pos_hint: {'x': 0.3, 'y': 0.5}
                            size_hint: [0.2, 0.08]
          
                              
          
                        Label:
                            pos_hint: {'x': 0.6, 'y': 0.5}
                            size_hint: [0.2, 0.08]
                            font_size: '14sp'
                            markup: True
                            text: "[color=ffff80][i][b]Monofásico[/b][/i][/color]"
                          #font_size: 40
                        CheckBox:
                            id: mono
                            group: 'sort'
                            color: 'FCFCFC'
                            pos_hint: {'x': 0.6, 'y': 0.5}
                            size_hint: [0.5, 0.08]
          
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 30
                    padding:20
                    BoxLayout:
                        size_hint_y: None
                        height: 80
                        Label:
                            markup: True
                            text:'[i]Potência do Motor[/i]'
                            font_size: 35
                        Label:
                            size_hint_x: None
                            width: 60
                            text: ''
                             
                        BoxLayout:
                            spacing: 10
                            
                            Label:
                                text:'' 
                                size_hint_x: None
                                width: 30
                                    
                            
               
                            TextInput:
                                id: tinput
                                multiline: False
                                write_tab: False
                                input_filter: 'float'
                                font_size: 40 
                                size_hint_x: None
                                width: 100
                         
                            Spinner:
                                id: pot
                                values: 'Cv', 'Kw', 'Watts'
                                text: 'Escolha'
                                size_hint_x: None
                                width: 140
                                on_text:
                                    root.escolhaPotencia()
                                  
                    BoxLayout:
                        size_hint_y: None
                        height: 80
                        Label:
                            size_hint_x: None
                            width: 20
                            text:''
                        
                        Label: 
                            markup: True
                            text:'[i]Tensão de Alimentação[/i]'
                            font_size: 35
                        
                        BoxLayout:
                            
                            Label:
                                text:''
                            
                            TextInput:
                                id: tinput
                                multiline: False
                                write_teb: False
                                input_filter: 'int'
                                font_size: 40 
                                size_hint_x: None
                                width: 100
                            Label:
                                text: 'Volts'
                                size_hint_x: None
                                width: 170
                              
                    BoxLayout:
                        size_hint_y: None
                        height: 80
                        Label: 
                            markup: True
                            text:'[i]Corrente Nominal[/i]'
                            font_size: 35
                        Label:
                            size_hint_x: None
                            width: 120
                            text:''
                        
               
                        TextInput:
                            id: tinput
                            multiline: False
                            write_tab: False
                            input_filter: 'float'
                            font_size: 40 
                            size_hint_x: None
                            width: 100
                        Label:
                            text: 'Ampéres'
                            size_hint_x: None
                            width: 170
                     
                    BoxLayout:
                        size_hint_y: None
                        height: 80
                        Label: 
                            markup: True
                            text:'[i]Rendimento[/i]'
                            font_size: 35
               
                        TextInput:
                            id: tinput
                            text:'87'
                            font_size: 40 
                            size_hint_x: None
                            width: 100
                        Label:
                            text: '%'
                            size_hint_x: None
                            width: 170
                              
                    BoxLayout:
                        size_hint_y: None
                        height: 80
                        Label: 
                            text:'Fator de Potência'
               
                        TextInput:
                            id: tinput
                            text: '0.87'
                            font_size: 40 
                            size_hint_x: None
                            width: 100
                        Label:
                            text: 'CosFi'
                            size_hint_x: None
                            width: 170
                              
                BoxLayout:
                    size_hint_y: None
                    height: 200
                    Label:
                        text: ''  
                              
                BoxLayout:
                    size_hint_y: None
                    height: 140
                    padding: 30
                      
                          
                    Button:
                        text: 'Calcular'
                        id: calc
                    Button:
                        text:'CANCELAR'
                        on_release: app.root.current= 'TelaPrincipal'
                      
                          
                        
          
          
          
          
          
          
                              
     



            
