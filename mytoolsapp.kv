# Tela de gerenciamento
<Gerenciador_de_Telas>:

    TelaPrincipal:
        name: 'TelaPrincipal'

    Sorteio:
        name: 'Sorteio'
   


<TelaPrincipal>:
           
    BoxLayout:

        orientation:'vertical'
        
        # Centraçização e espaços entre os widgets
        padding: 50
        spacing: 50

        # Configurações de cores e imagens

        canvas:
            Color:
                rgba: 0.5, 1, 1, 0.5
            
            Rectangle: 
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            canvas:
                Color:
                    rgba: 0.5, 1, 1, 0.3
                
                Rectangle: 
                    size: self.size
                    pos: self.pos
                    source: 'LOGONRS.png'
        Label:
            text:'RS Tools'
            color: 0, 0, 1, 1
            font_size: 60
            size_hint_y: None
            height: 60   
                     
        Label:
            text:''
            size_hint_y: None
            height: 45
            
               
        Button:
            text: 'EletricTools'
            font_size: 35
            size_hint_y: None
            height: 100


            
        Button:
            text: 'MecanicTools'
            size_hint_y: None
            height: 100

        Button:
            text: 'SeveralTolls'
            size_hint_y: None
            height: 100
            on_release: app.root.current= 'Sorteio'
            
        Label:
            test:''

        Button:
            markup: True
            text: '[b]Sair[/b]'
            size_hint_y: None
            height: 60
            on_release: root.confirmacao_de_saida()

<Sorteio>:
    BoxLayout:

        GridLayout:
            cols: 1

            # Inserindo Action Bar
            ActionBar:
                canvas:
                    Color:
                        rgba: 0.3, 0.7, 0.4, 0.5
                    Rectangle: 
                        size: self.size
                        pos: self.pos
                ActionView:
                    ActionPrevious:
                        title:'Janela 1'
                        on_release: app.root.current = 'TelaPrincipal'
                   
                    ActionButton:

                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle: 
                                size: self.size
                                pos: self.pos
                        
                        text:'Sair'
                        on_release: app.stop()

                        
            BoxLayout:
                
                orientation: 'vertical'
                padding: 35
                spacing: 20
                canvas:
                    Color:
                        rgba: 0.5, 0.7, 1, 0.5
                    Rectangle: 
                        size: self.size
                        pos: self.pos
                        #source: 'LOGONRS.png'
                Label:
                    
                    markup: True
                    text: '[color=00ff00][b][i]RSTools[/i][/b][/color]'
                    font_size: 60
                    size_hint_y: None
                    height: 100
                    
                Label:
                    markup:True
                    text: "[color=ffff80][i][b]DIGITE OS ELEMENTOS DO SORTEIO[/b][/i][/color]"
                    font_size: 40
                    size_hint_y: None
                    height: 100
                BoxLayout:
                    size_hint_y: None
                    height: 370
                    TextInput:
                        text: "Digite aqui "
                        id: element
                BoxLayout:
                    size_hint_y: None
                    height:100
                    Label:
                        markup: True
                        text: "[color=ffff80][i][b]ESCOLHA O TIPO DE SORTEIO[/b][/i][/color]"
                BoxLayout:
                    
                
                    GridLayout:
                        cols: 2
                        Label:
                            markup: True
                            text: "[color=ffff80][i][b]Sequência[/b][/i][/color]"
                            font_size: 40
                        CheckBox:
                            id: sequencia
                            group: 'sort'
                            pos_hint: {'x': 0, 'y': 0.5}
                            size_hint: [0.2, 0.08]
                            
                            

                    GridLayout:
                        cols: 2
                        Label:
                            markup: True
                            text: "[color=ffff80][i][b]Sorteio Único[/b][/i][/color]"
                            font_size: 40
                        CheckBox:
                            id: unico
                            group: 'sort'
                            color: 'FCFCFC'
                            pos_hint: {'x': 0.3, 'y': 0.5}
                            size_hint: [0.5, 0.08]
                            
                BoxLayout:
                    Label:
                        id: output_label
                        text: ''
                BoxLayout:
                    size_hint_y: None
                    height: 100

                    spacing:20
                    
                    Button:
                        text:'SORTEAR'
                        on_release: root.sorteio(self)

                    
                    Button:
                        text:'CANCELAR'
                        on_release: app.root.current= 'TelaPrincipal'




                    




            
